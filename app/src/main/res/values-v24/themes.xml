<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MockFlickrApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackgroundFloating">@color/teal_700</item>
        <item name="android:navigationBarColor">@color/teal_700</item>
    </style>

    <style name="Theme.MockFlickrApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MockFlickrApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MockFlickrApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>